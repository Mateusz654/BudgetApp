<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ml.jk.android.budgetapp"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.BudgetApp"
        tools:targetApi="31">
        <activity
            android:name=".LoginActivity"
            android:exported="true"
            android:label="@string/title_activity_login"
            android:theme="@style/Theme.BudgetApp">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="MainActivity"
            android:theme="@style/Theme.BudgetApp" />
        <activity
            android:name=".RegisterActivity"
            android:exported="true"
            android:label="@string/title_activity_register"
            android:theme="@style/Theme.BudgetApp" />
        <activity
            android:name=".AddTransactionActivity"
            android:exported="true"
            android:label="AddTransactionActivity"
            android:theme="@style/Theme.BudgetApp" />
        <activity
            android:name=".CategoriesActivity"
            android:exported="true"
            android:label="CategoriesActivity"
            android:theme="@style/Theme.BudgetApp" />
        <activity
            android:name=".NotificationsActivity"
            android:exported="true"
            android:label="NotificationsActivity"
            android:theme="@style/Theme.BudgetApp" />
        <activity
            android:name=".TransactionsActivity"
            android:exported="true"
            android:label="TransactionsActivity"
            android:theme="@style/Theme.BudgetApp" />
        <activity
            android:name=".RaportsActivity"
            android:exported="true"
            android:label="RaportsActivity"
            android:theme="@style/Theme.BudgetApp" />
        <activity
            android:name=".DonateActivity"
            android:exported="true"
            android:label="DonateActivity"
            android:theme="@style/Theme.BudgetApp" />
    </application>

</manifest>